<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_service_picture_service_item"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/social" />

            <TextView
                android:id="@+id/tv_service_price_service_item"
                style="@style/TextViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:text="R$ 0,00" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_service_name_service_item"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="nome do servico" />

            <TextView
                android:id="@+id/tv_description_service_item"
                style="@style/TextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingLeft="10dp"
                android:text="descri kasjhdas kajsdhkjasdha aksjdhaksjdh  lonasdaldskmaalksjdlaskdg longe description"
                android:textColor="#757575" />

            <TextView
                android:id="@+id/tv_user_service_item"
                style="@style/TextViewStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="user" />


        </LinearLayout>


    </LinearLayout>
</RelativeLayout>