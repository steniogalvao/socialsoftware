<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/im_picture_institution_details"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/social" />

    <TextView
        android:id="@+id/tv_name_institution_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/im_picture_institution_details"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/pequeno_50" />

    <TextView
        android:id="@+id/tv_description_institution_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_name_institution_details"
        android:layout_marginTop="10dp"
        android:text="@string/grande_600" />


</RelativeLayout>