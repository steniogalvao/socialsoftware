<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <Button
        android:id="@+id/btn_next_new_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/next" />

    <View
        android:id="@+id/v_separator_new_item_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/btn_next_new_item_2"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_apresentation_new_item_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/chose_instituitions_to_donate"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"/>

    <ListView
        android:id="@+id/lv_institutions_new_item_2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/v_separator_new_item_2"
        android:layout_below="@id/tv_apresentation_new_item_2"
        android:layout_marginBottom="10dp" />

</RelativeLayout>